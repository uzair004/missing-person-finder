extends layout

block header
	#AMP_header
		h1(style="display:table-cell;text-align: center").align-middle Did you lost someone? Don't worry we are here to the rescue

block content
	if Photoerror
		div(class="alert alert-danger") #{Photoerror}
	h1 Add Missing Person
	.bg-light.p-4
		form(method='POST', action='/person/missing/'+user._id enctype="multipart/form-data")
			#form-group
				label Name
				span.text-danger *
				input.form-control(name="name", type='text', placeholder='missing person name')
			#form-group
				label Gender
				span.text-danger *
				select.form-control(name="gender")
					option(value="male" selected) Male
					option(value="female") Female
					option(value="other") Other
			#form-group
				label Mental Disorder
				span.text-danger *
				div.form-check.form-check-inline
					.form-check
						input(type="radio" value="true" name="mentalStatus").form-check-input#Check1
						label(for="Check1").form-check-label.text-secondary Yes
					.form-check
						input(type="radio" value="false" name="mentalStatus").form-check-input#Check2
						label(for="Check2").form-check-label.text-secondary No
			#form-group
				label Body Type
				span.text-danger *
				select.form-control(name="body")
					option(value="skinny" selected) Skinny
					option(value="normal") Normal
					option(value="fat") Fat
			#form-group
				label Age
				span.text-danger *
				span.text-black.small   (years)
				input.form-control(name="age", type='number' value=22)
			#form-group
				label Skin Color
				span.text-danger *
				select.form-control(name="skinColor")
					option(value="light" selected) Light
					option(value="fair") Fair
					option(value="medium") Medium
					option(value="olive") Olive
					option(value="tan") Tan
					option(value="brown") Brown
					option(value="dark") Dark Brown
					option(value="black") Black
			#form-group
				label Eye Color
				span.text-danger *
				select.form-control(name="eyeColor")
					option(value="amber" selected) Amber
					option(value="blue") Blue
					option(value="brown") Brown
					option(value="gray") Gray
					option(value="green") Green
					option(value="hazel") Hazel
					option(value="red") Red and Violet
			#form-group
				label Hair Type
				span.text-danger *
				select.form-control(name="hair")
					option(value="straight" selected) Straight
					option(value="wavy") Wavy
					option(value="curly") Curly
					option(value="coily") Coily
					option(value="bold") Bold
			#form-group
				label Country
				span.text-danger *
				input.form-control(name="country", type='text' list='countries' class="search" placeholder="country name")
				datalist(id="countries")
			#form-group
				label Addrees
				span.text-danger *
				input.form-control(name="address", type='text' placeholder="address")
			#form-group
				label Date of Missing
				span.text-danger *
				input.form-control(name="dateOfMissing", type='date')
			#form-group
				label Current Status
				span.text-danger *
				select.form-control(name="currentStatus")
					option(value="missing" selected) Missing
					//- option(value="found") Found
			#form-group
				label Description
				span.text-danger *
				textarea.form-control(name="description" placeholder="more details")
			.form-group
				label Image
				span.text-danger *
				input#input-files.form-control-file.border(type='file', name='file')
			.row
				.col-sm-12
					.preview-images
						img#Profile_Image
			br
			//- small text
			p.text-muted Your entry will be automatically posted on the facebook. It will be only visible to people of your country


			input.btn.btn-primary(type='submit',value='Add Person')

	//- for populating country dropdown
	script(src="/js/populateCountryDropdown.js")